# Define paths to GSL and libomp libraries
# CC = /opt/homebrew/opt/llvm/bin/clang
# CXX = /opt/homebrew/opt/llvm/bin/clang++

PKG_CPPFLAGS = $(shell pkg-config --cflags --libs htslib)

PKG_CFLAGS = $(shell pkg-config --cflags --libs htslib)

PKG_LIBS = $(shell pkg-config --cflags --libs htslib)

.PHONY: show-flags
show-flags:
	@echo "PKG_CPPFLAGS=$(PKG_CPPFLAGS)"
	@echo "PKG_CFLAGS=$(PKG_CFLAGS)"
	@echo "PKG_LIBS=$(PKG_LIBS)"
	@echo "CFLAGS=$(CFLAGS)"
	@echo "CXXFLAGS=$(CXXFLAGS)"